<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical"
    android:id="@+id/background">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_city"
            android:hint="请输入要搜索的城市"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textSize="30sp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_search"
        android:text="查询天气"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_location"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_parent_city"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_admin_area"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_cnty"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_lat"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_lon"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_tmp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_fl"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_cond_txt"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_wind_dir"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_wind_sc"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_wind_spd"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_hum"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_loc"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F000"/>

</LinearLayout>